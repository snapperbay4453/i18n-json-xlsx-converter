{
	"include": ["src/**/*"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"baseUrl": ".",
    "target": "es5",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"allowJs" : true,
		"allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
		"esModuleInterop": true,
		"paths": {
      "@/*": [ "src/*" ],
      "#/*": [ "tests/*" ],
      "file-saver-es": [
        "@types/file-saver"
      ]
    }
	}
}
